{
  "version": 3,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/upload.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/upload-test.html", "dest": "/upload-test.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "framework": "vite",
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
