{
  "version": 3,
  "builds": [
    {
      "src": "watch-shop/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "watch-shop/dist"
      }
    },
    {
      "src": "watch-shop/api/upload.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/watch-shop/api/$1" },
    { "src": "/assets/(.*)", "dest": "/watch-shop/assets/$1" },
    { "src": "/favicon.ico", "dest": "/watch-shop/favicon.ico" },
    { "src": "/upload-test.html", "dest": "/watch-shop/upload-test.html" },
    { "src": "/(.*)", "dest": "/watch-shop/index.html" }
  ],
  "framework": "vite",
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "rewrites": [
    { "source": "/watch-shop/(.*)", "destination": "/watch-shop/index.html" }
  ]
}
